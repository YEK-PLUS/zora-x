FROM node:12-alpine

WORKDIR /usr/app
COPY package.json ./
RUN npm install
RUN npm run build
COPY . ./
EXPOSE 1337

# DATABASE_HOST
ARG DATABASE_HOST=${DATABASE_HOST}
ENV DATABASE_HOST=${DATABASE_HOST}

# DATABASE_PORT
ARG DATABASE_PORT=${DATABASE_PORT}
ENV DATABASE_PORT=${DATABASE_PORT}

# DATABASE_NAME
ARG DATABASE_NAME=${DATABASE_NAME}
ENV DATABASE_NAME=${DATABASE_NAME}

# DATABASE_USERNAME
ARG DATABASE_USERNAME=${DATABASE_USERNAME}
ENV DATABASE_USERNAME=${DATABASE_USERNAME}

# DATABASE_PASSWORD
ARG DATABASE_PASSWORD=${DATABASE_PASSWORD}
ENV DATABASE_PASSWORD=${DATABASE_PASSWORD}

# DATABASE_SSL
ARG DATABASE_SSL=${DATABASE_SSL}
ENV DATABASE_SSL=${DATABASE_SSL}

# JWT_SECRET
ARG JWT_SECRET=${JWT_SECRET}
ENV JWT_SECRET=${JWT_SECRET}

# ADMIN_JWT_SECRET
ARG ADMIN_JWT_SECRET=${ADMIN_JWT_SECRET}
ENV ADMIN_JWT_SECRET=${ADMIN_JWT_SECRET}

# API_TOKEN_SALT
ARG API_TOKEN_SALT=${API_TOKEN_SALT}
ENV API_TOKEN_SALT=${API_TOKEN_SALT}

# APP_KEYS
ARG APP_KEYS=${APP_KEYS}
ENV APP_KEYS=${APP_KEYS}

# AWS_ACCESS_KEY_ID
ARG AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
ENV AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}

# AWS_ACCESS_SECRET
ARG AWS_ACCESS_SECRET=${AWS_ACCESS_SECRET}
ENV AWS_ACCESS_SECRET=${AWS_ACCESS_SECRET}

# AWS_BUCKET
ARG AWS_BUCKET=${AWS_BUCKET}
ENV AWS_BUCKET=${AWS_BUCKET}

# AWS_REGION
ARG AWS_REGION=${AWS_REGION}
ENV AWS_REGION=${AWS_REGION}

# BUCKET_PREFIX
ARG BUCKET_PREFIX=${BUCKET_PREFIX}
ENV BUCKET_PREFIX=${BUCKET_PREFIX}

# AWS_BUCKET_ACL
ARG AWS_BUCKET_ACL=${AWS_BUCKET_ACL}
ENV AWS_BUCKET_ACL=${AWS_BUCKET_ACL}

# CDN_BASE_URL
ARG CDN_BASE_URL=${CDN_BASE_URL}
ENV CDN_BASE_URL=${CDN_BASE_URL}

CMD ["npm", "start"]